<div class='row-fluid'>
    <div class='span4'>
        <img src='http://placehold.it/350x250'/>
    </div>
    <div class='span2'>
        <i class='icon-user icon-white'></i>
        <div>Some User</div>
        <hr>
        <i class="icon-calendar icon-white"></i>
        <div>{{createdAt}}</div>
        <hr>
        {{template "items/social"}}
    </div>
    <div class='span6'>
        <div class='pull-right'>
            {{#linkTo "items.edit" item}}<i class="icon-edit icon-white"></i>{{/linkTo}}
        </div>
        <div class='row-fluid'><h1>{{name}}</h1></div>
        <div class='row-fluid'><p>{{description}}</p></div>
    </div>
</div>
<div class='spacer20'></div>
<div class='row-fluid'>
    <div class='span4'>
        <div class='well'>
            {{template "items/downloads"}}
            <hr>
            {{template "items/tags"}}
            <hr>
            {{template "items/license"}}
        </div>
    </div>
    <div class='span8'>
        <div class='well'><img src='http://placehold.it/800x200'></div>
    </div>
    <div class='span8'>
        <div class='well'>{{instructions}}</div>
    </div>
    <div class='span8'>
        <div class='well'>{{template "items/comments"}}</div>
    </div>
</div>

